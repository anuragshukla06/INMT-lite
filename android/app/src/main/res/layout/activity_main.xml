<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INMT"
        android:textColor="@color/black"
        android:textSize="64dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interactive Neural Machine Translation"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dropdownBtn"
        app:layout_constraintTop_toBottomOf="@id/subheader"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="@id/bowBtn"
        app:layout_constraintEnd_toEndOf="@id/bowBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DROPDOWN"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bowBtn"
        app:layout_constraintTop_toBottomOf="@id/dropdownBtn"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BAG OF WORDS"/>

</androidx.constraintlayout.widget.ConstraintLayout>